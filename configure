#!/usr/bin/env bash


for arg in "$@"; do
    case "$arg" in
        --prefix=*)
            PREFIX=`echo $arg | sed 's/--prefix=//'`
            echo "PREFIX = $PREFIX" > Makefile
        ;;

    esac
done

if [ -z "$PREFIX" ]; then
    echo "PREFIX = /usr/local" > Makefile
fi

chmod a+x mousetrap/mousetrap.py
cat Makefile.in >> Makefile

echo "Configuration complete. Type 'make install' to install."
